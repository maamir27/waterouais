<div class="container" style="margin-top: 64px;">
  <div class="row p-3 justify-content-center" style="margin: auto;">
    <div class="col align-items-center">

      <h1 class="page-headers text-center mt-2" style="font-size:36px;">You've checked in!</h1>
      <h2 class="text-center"><%= @station.name %></h2>
      <p class="text-center">You earned 1 ğŸ¢ point!</p>

      <div class="user-pts-info d-flex" style="align-items:center;">
        <div class="user-avatar-pts-info">
          <% if current_user.avatar.attached? %>
            <%= cl_image_tag(current_user.avatar.key, class: "rounded-circle", width: 64, height: 64) %>
          <% else %>
            <%= image_tag("/assets/default_user.jpg", :alt => "default", class: "rounded-circle", width: 64, height: 64) %>
          <% end %>
        </div>

        <div class="user-info d-flex ms-3" style="justify-content:center;flex-direction: column; row-gap:4px;">
          <h6 class="blue-text mb-0"><%= current_user.username%></h6>
          <p class="mb-0" style="font-size:12px;">Review and you will earn 5 ğŸ¢ points!</p>
        </div>

      </div>

      <div class="review-form mt-3">
        <%= simple_form_for [@station, @review] do |f| %>
          <%# CONVERT RATING INTO WATER ICONS? %>
          <%= f.input :rating, collection: 0..5, include_blank: false   %>
          <%= f.input :description, label:false, placeholder:"Comment..." %>

          <div class="d-flex justify-content-center mt-2">
            <label class="btn-blue text-center mx-0">
              Attach photos
              <span style="display:none;">
                <%= f.input :photos, as: :file, input_html: { multiple: true } %>
              </span>
            </label>
          </div>

          <div class="d-flex justify-content-center mt-2">
            <%= f.button :submit, class: "btn-green", style:"margin:auto;" %>
          </div>
		    <% end %>
      </div>


    </div>
  </div>
</div>
