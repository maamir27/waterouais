<div class="container" style="margin-top: 56px;">
	<div class="col align-items-center">
		<h1 class="page-headers text-center" style="font-size:36px;">You've checked in!</h1>

		<div style="justify-content-center text-center">
			<h2><%= @station.name %></h2>
			<div>You earned 1 🐢 point for checking in! </div>
		</div>

		<div class="user-info-points d-flex mt-3" style="justify-content: space-around;">
				<%# AVATAR %>
        <div class="user-avatar">
          <%= cl_image_tag current_user.avatar.key, style:"width:48px; height:48px; object-fit: cover; border-radius:50%;" %>
        </div>

        <div class="user-points-info">
          <h6><%= current_user.username%></h6>
          <div>Review and you will earn 5 🐢 points! </div>
        </div>
      </div>

		<%# FORM & BUTTONS %>
		<%= simple_form_for [@station, @review] do |f| %>
			<%# CONVERT RATING INTO WATER ICONS? %>
			<%= f.input :rating, collection: 0..5  %>
			<%= f.input :description, label: 'Leave your review' %>

			<%# BUTTONS %>
			<div class="d-flex justify-content-center mt-2">
				<label class="btn-blue text-center mx-0">
				Attach photos
					<span style="display:none;">
						<%= f.input :photos, as: :file, input_html: { multiple: true } %>
					</span>
				</label>
			</div>

			<div class="d-flex justify-content-center mt-2">
				<%= f.button :submit, class: "btn-green", style:"margin:auto;" %>
			</div>
		<% end %>
	</div>
</div>
