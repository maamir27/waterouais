<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<h1>Stations</h1>

 <div class="col-9 d-flex flex-wrap">
      <div class="container">
        <div class="row justify-content-center", style="row-gap: 1.3rem;">
          <% @stations.each do |station| %>
            <div class="col-4">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title"><%= station.name %></h5>
                  <p class="card-text"><strong>Name:</strong><span class="ms-1">$<%= station.name %></span></p>
                  <%= link_to 'More info', station_path(station) %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
   </div></div>

