<div class="container justify-content-center">

  <div class= "row justify-content-center">
    <div id="carouselExample" class="carousel slide">
      <div class="carousel-inner">

        <%= @station.photos.each_with_index do |photo, index| %>
          <div id="carousel_item_<%= index %>" class="carousel-item <%= index == 0 ? 'active' : '' %>">
            <img src="<%= cl_image_tag @station.photo.key %>" class="d-block w-100" alt="...">
          </div>
        <% end %>

      </div>

      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>

      <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>

    </div>
  </div>

  <div class="row ms-2 mt-2">
    <h1><%= @station.name %></h1>
    <p>Average rating: <%= @station.avg_rating %></p>
    <p><%= @station.address %></p>
    <p>Description: <%= @station.description %></p>
  </div>

  <div class="row justify-content-center">
    <%= link_to "Google Maps", root_path, :class => "btn btn-green" %>
    <div class="row justify-content-center" id="check-in-btn" data-controller="check-in" data-check-in-id-value="<%= @station.id %>">
      <%= link_to "Check-in", new_station_review_path(@station.id), class: "btn btn-blue", data: { check_in_target: "button", action: "click->check-in#fire" } %>
    </div>
  </div>

  <div class="row ms-2">
    Reviews head
  </div>

  <div class="row ms-2">
    Reviews body
  </div>

</div>
